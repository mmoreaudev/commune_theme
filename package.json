{
  "name": "commune-theme-modern",
  "version": "2.0.0",
  "description": "ThÃ¨me moderne et accessible pour sites de commune - Drupal 11",
  "main": "assets/js/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel watch:*",
    "build": "npm run build:css && npm run build:js && npm run build:components && npm run optimize:assets",
    "build:css": "postcss src/css/main.css -o assets/css/main.css --map",
    "build:css:prod": "postcss src/css/main.css -o assets/css/main.css --env production",
    "build:components": "postcss src/components/*.css -d assets/css/components --map",
    "build:js": "rollup -c rollup.config.js",
    "build:js:prod": "rollup -c rollup.config.js --environment NODE_ENV:production",
    "watch:css": "npm run build:css -- --watch",
    "watch:components": "npm run build:components -- --watch",
    "watch:js": "npm run build:js -- --watch",
    "optimize:assets": "npm run optimize:images && npm run optimize:fonts",
    "optimize:images": "imagemin 'src/assets/images/**/*.{jpg,jpeg,png,svg,webp}' --out-dir='assets/images' --plugin=imagemin-webp",
    "optimize:fonts": "copyfiles 'src/assets/fonts/**/*' assets/fonts",
    "lint:css": "stylelint 'src/**/*.css' --fix",
    "lint:js": "eslint 'src/**/*.js' --fix",
    "lint": "npm run lint:css && npm run lint:js",
    "format": "prettier --write 'src/**/*.{css,js,json}' 'templates/**/*.twig'",
    "test:a11y": "pa11y-ci --sitemap http://localhost/sitemap.xml",
    "test:lighthouse": "lhci autorun",
    "serve": "browser-sync start --proxy 'commune.local' --files 'assets/**/*' 'templates/**/*.twig'",
    "clean": "rimraf assets/css assets/js assets/images assets/fonts",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "postcss": "^8.4.40",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-custom-properties": "^13.3.10",
    "postcss-custom-media": "^10.0.8",
    "postcss-mixins": "^10.0.1",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/typography": "^0.5.13",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.4",
    "rollup": "^4.18.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^9.6.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "prettier": "^3.3.2",
    "imagemin": "^9.0.0",
    "imagemin-cli": "^8.0.0",
    "imagemin-webp": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.8",
    "npm-run-all": "^4.1.5",
    "browser-sync": "^3.0.2",
    "pa11y-ci": "^3.1.0",
    "@lhci/cli": "^0.13.0"
  },
  "dependencies": {
    "swiper": "^11.1.8",
    "leaflet": "^1.9.4",
    "alpinejs": "^3.14.1",
    "focus-trap": "^7.5.4",
    "smooth-scroll": "^16.1.3",
    "intersection-observer": "^0.12.2"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jquery": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Drupal": "readonly",
      "drupalSettings": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  },
  "stylelint": {
    "extends": ["stylelint-config-standard"],
    "rules": {
      "color-hex-length": "long",
      "declaration-block-trailing-semicolon": "always",
      "indentation": 2
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not IE 11"
  ],
  "keywords": [
    "drupal",
    "theme",
    "commune",
    "accessible",
    "responsive",
    "rgaa"
  ],
  "author": "Votre nom",
  "license": "GPL-2.0+",
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/commune-theme.git"
  },
  "bugs": {
    "url": "https://github.com/votre-username/commune-theme/issues"
  },
  "homepage": "https://github.com/votre-username/commune-theme#readme"
}