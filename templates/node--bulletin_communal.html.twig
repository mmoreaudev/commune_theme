{# Bulletin communal - PDF or description cards #}
<section aria-labelledby="bulletin-title">
  <h1 id="bulletin-title" class="text-2xl font-bold text-primary">{{ label }}</h1>
  <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-6">
    {% for item in content.field_bulletins %}
      <article class="bg-white border rounded-lg p-4 shadow-sm flex flex-col">
        <div class="flex-1">
          <h2 class="font-semibold">{{ item.entity.title.value }}</h2>
          {% if item.entity.field_pdf.uri %}
            <p class="text-sm text-muted mt-2">Fichier PDF disponible.</p>
          {% else %}
            <div class="mt-2 text-gray-800">{{ item.entity.field_resume.value }}</div>
          {% endif %}
        </div>
        {% if item.entity.field_pdf.uri %}
          <a href="{{ file_url(item.entity.field_pdf.uri) }}" class="mt-4 inline-block text-accent" aria-label="Télécharger {{ item.entity.title.value }}">Télécharger le bulletin (PDF)</a>
        {% endif %}
      </article>
    {% endfor %}
  </div>
</section>
