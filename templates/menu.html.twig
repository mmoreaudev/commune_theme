 * @file
 * Template pour les menus
 */
#}
{% import _self as menus %}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    <ul{{ attributes.addClass('menu-level-' ~ menu_level, 'list-none', menu_level == 0 ? 'flex space-x-6' : 'space-y-2') }}>
    {% for item in items %}
      <li{{ item.attributes.addClass('menu-item') }}>
        {% if item.url %}
          <a href="{{ item.url }}" 
             class="nav-link {{ item.in_active_trail ? 'active' : '' }} 
                    {% if menu_level == 0 %}px-3 py-2 text-gray-700 font-medium hover:text-commune-600 transition-colors{% else %}block px-3 py-2 text-sm text-gray-600 hover:text-gray-900{% endif %}">
            {{ item.title }}
          </a>
        {% else %}
          <span class="nav-link-nourl">{{ item.title }}</span>
        {% endif %}
        
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}

{{ menus.menu_links(items, attributes, 0) }}