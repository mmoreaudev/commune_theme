<div class="fade-in">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Événements à venir</h2>
  <div class="space-y-4">
    {% for event in events %}
      <div class="bg-white shadow rounded-lg p-4 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900">{{ event.title }}</h3>
            <p class="text-gray-600"><i class="fas fa-calendar-alt mr-1"></i>{{ event.date|date('d/m/Y H:i') }}</p>
            <p class="text-gray-600"><i class="fas fa-map-marker-alt mr-1"></i>{{ event.location }}</p>
          </div>
          <a href="{{ event.url }}" class="btn-primary" aria-label="Voir l'événement {{ event.title }}">
            <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>