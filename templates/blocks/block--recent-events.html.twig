{# Block: événements récents #}
<div class="block-recent-events">
  <h3 class="text-lg font-semibold">Événements récents</h3>
  <ul class="mt-3 space-y-3">
    {% for item in content %}
      <li class="flex items-start gap-3">
        <time class="text-sm text-muted">{{ item['#node'].field_date.value|date('d/m/Y') }}</time>
        <a href="{{ item['#node'].toUrl() }}" class="text-primary">{{ item['#node'].label }}</a>
      </li>
    {% endfor %}
  </ul>
</div>
