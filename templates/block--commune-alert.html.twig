{#
/**
 * @file
 * Template pour le bloc d'alerte de la commune.
 *
 * Variables disponibles:
 * - alert_type: Type d'alerte (info, warning, error, success, urgent)
 * - alert_title: Titre optionnel de l'alerte
 * - alert_message: Message de l'alerte
 * - dismissible: Boolean - l'alerte peut-elle être fermée
 * - auto_hide: Boolean - masquage automatique
 * - auto_hide_delay: Délai en millisecondes
 */
#}

{% set alert_classes = [
  'commune-alert',
  'alert-' ~ alert_type,
  dismissible ? 'alert-dismissible',
  auto_hide ? 'alert-auto-hide'
] %}

{% set alert_attributes = create_attribute({
  'class': alert_classes,
  'role': alert_type == 'error' ? 'alert' : 'status',
  'aria-live': alert_type == 'urgent' or alert_type == 'error' ? 'assertive' : 'polite',
  'data-alert-type': alert_type
}) %}

<div{{ alert_attributes }}>
  {# Icône selon le type d'alerte #}
  <div class="alert-icon" aria-hidden="true">
    {% if alert_type == 'info' %}
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z" fill="currentColor"/>
      </svg>
    {% elseif alert_type == 'warning' %}
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z" fill="currentColor"/>
      </svg>
    {% elseif alert_type == 'error' or alert_type == 'urgent' %}
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor"/>
      </svg>
    {% elseif alert_type == 'success' %}
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" fill="currentColor"/>
      </svg>
    {% endif %}
  </div>

  {# Contenu de l'alerte #}
  <div class="alert-content">
    {% if alert_title %}
      <h3 class="alert-title">{{ alert_title }}</h3>
    {% endif %}
    
    <div class="alert-message">
      {{ alert_message|nl2br }}
    </div>
    
    {# Timestamp pour les alertes urgentes #}
    {% if alert_type == 'urgent' %}
      <div class="alert-timestamp">
        <time datetime="{{ "now"|date('c') }}">
          {{ 'Publié le'|t }} {{ "now"|date('d/m/Y à H:i') }}
        </time>
      </div>
    {% endif %}
  </div>

  {# Bouton de fermeture si dismissible #}
  {% if dismissible %}
    <button type="button" class="alert-close" 
            aria-label="{{ 'Fermer cette alerte'|t }}"
            title="{{ 'Fermer cette alerte'|t }}">
      <span aria-hidden="true">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" fill="currentColor"/>
        </svg>
      </span>
    </button>
  {% endif %}
</div>

{# Styles CSS pour l'alerte (si pas inclus globalement) #}
<style>
.commune-alert {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1rem;
  margin-bottom: 1rem;
  border-radius: 0.5rem;
  border-left: 4px solid;
  position: relative;
  opacity: 0;
  transform: translateY(-10px);
  transition: all 0.3s ease-in-out;
}

.commune-alert.alert-show {
  opacity: 1;
  transform: translateY(0);
}

.commune-alert.alert-dismissing {
  opacity: 0;
  transform: translateY(-10px);
}

/* Types d'alertes avec couleurs accessibles */
.alert-info {
  background-color: #eff6ff;
  border-color: #3b82f6;
  color: #1e40af;
}

.alert-warning {
  background-color: #fffbeb;
  border-color: #f59e0b;
  color: #92400e;
}

.alert-error,
.alert-urgent {
  background-color: #fef2f2;
  border-color: #ef4444;
  color: #dc2626;
}

.alert-success {
  background-color: #f0fdf4;
  border-color: #22c55e;
  color: #16a34a;
}

.alert-icon {
  flex-shrink: 0;
  margin-top: 0.125rem;
}

.alert-content {
  flex: 1;
  min-width: 0;
}

.alert-title {
  margin: 0 0 0.5rem 0;
  font-size: 1.125rem;
  font-weight: 600;
}

.alert-message {
  margin: 0;
  line-height: 1.5;
}

.alert-timestamp {
  margin-top: 0.5rem;
  font-size: 0.875rem;
  opacity: 0.8;
  font-style: italic;
}

.alert-close {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.25rem;
  border-radius: 0.25rem;
  color: currentColor;
  opacity: 0.7;
  transition: opacity 0.2s ease-in-out;
}

.alert-close:hover,
.alert-close:focus {
  opacity: 1;
  background-color: rgba(0, 0, 0, 0.1);
}

/* Mode contraste élevé */
@media (prefers-contrast: high) {
  .commune-alert {
    border-width: 2px;
    border-style: solid;
  }
  
  .alert-info { border-color: #1e40af; }
  .alert-warning { border-color: #92400e; }
  .alert-error, .alert-urgent { border-color: #dc2626; }
  .alert-success { border-color: #16a34a; }
}

/* Responsive */
@media (max-width: 767px) {
  .commune-alert {
    padding: 0.75rem;
    gap: 0.75rem;
  }
  
  .alert-title {
    font-size: 1rem;
  }
  
  .alert-message {
    font-size: 0.875rem;
  }
}
</style>