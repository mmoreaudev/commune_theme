{# Magasin local - card/list layout #}
<section aria-labelledby="magasin-title">
  <h1 id="magasin-title" class="text-2xl font-bold text-primary">{{ label }}</h1>
  <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for item in content.field_magasins %}
      <article class="bg-white border rounded-lg p-4 shadow-sm">
        <h2 class="font-semibold">{{ item.entity.title.value }}</h2>
        <p class="text-sm text-muted">{{ item.entity.field_adresse.value }}</p>
        <p class="mt-2">{{ item.entity.field_description.value }}</p>
        <div class="mt-3 text-sm">
          <span class="font-medium">Horaires :</span> {{ item.entity.field_horaires.value }}
        </div>
      </article>
    {% endfor %}
  </div>
</section>
