<article class="card fade-in" itemscope itemtype="https://schema.org/NewsArticle">
  <img src="{{ node.field_image.entity.uri.value ? file_url(node.field_image.entity.uri.value) : 'https://via.placeholder.com/400x250/1e40af/ffffff?text=Actualité+Morton' }}" alt="{{ node.field_image.alt ? node.field_image.alt : 'Image de l\'actualité ' ~ node.title.value }}" class="w-full h-48 object-cover">
  <div class="card-content">
    <h1 class="card-title" itemprop="headline">{{ node.title.value }}</h1>
    <p class="card-meta" itemprop="datePublished" content="{{ node.field_date.value|date('c') }}">
      <i class="fas fa-calendar-alt mr-1"></i>{{ node.field_date.value|date('d/m/Y') }}
    </p>
    <div class="card-text" itemprop="description">
      {{ node.field_summary.value|raw }}
    </div>
    <a href="{{ url }}" class="btn-primary inline-block" aria-label="Lire l'article complet {{ node.title.value }}">
      <i class="fas fa-arrow-right mr-2"></i>Lire la suite
    </a>
  </div>
</article>