{# Actualit√© card layout #}
<article role="article" aria-labelledby="node-{{ node.id }}-title" class="bg-white shadow-sm rounded-lg overflow-hidden">
  {% if node.field_image.entity %}
    <img src="{{ file_url(node.field_image.entity.fileuri) }}" alt="{{ node.field_image.alt }}" class="w-full h-64 object-cover" />
  {% endif %}
  <div class="p-6">
    <h2 id="node-{{ node.id }}-title" class="text-2xl font-semibold text-primary">{{ label }}</h2>
    <p class="mt-2 text-sm text-muted">{{ node.field_date.value|date("d F Y") }}</p>
    <div class="mt-4 text-base text-gray-800">{{ content.body }}</div>
    <a href="{{ url }}" class="inline-block mt-4 text-accent font-medium" aria-label="Lire la suite de {{ label }}">Lire la suite</a>
  </div>
</article>
