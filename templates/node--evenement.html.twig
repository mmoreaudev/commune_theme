{# Événement card layout #}
<article role="article" class="bg-white border rounded-lg p-6 shadow-sm">
  <header>
    <h2 class="text-2xl font-semibold text-primary">{{ label }}</h2>
    <p class="mt-1 text-sm text-muted"><time datetime="{{ node.field_date.value }}">{{ node.field_date.value|date("d F Y") }}</time> — {{ node.field_lieu.value }}</p>
  </header>
  <div class="mt-4 text-gray-800">{{ content.body }}</div>
  {% if content.field_inscription %}
    <div class="mt-4">
      {{ content.field_inscription }}
    </div>
  {% endif %}
</article>
